<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Value</th>
    <th>From user</th>
    <th>To user</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td>$<%= transaction.value %></td>
    <td><%= link_to transaction.creditor.name, transaction.creditor %></td>
    <td><%= link_to transaction.debtor.name, transaction.debtor %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

